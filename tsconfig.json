{
	"compilerOptions": {
		"target": "ESNext",
		"module": "commonjs",
		"moduleResolution": "Node",
		"lib": ["ESNext", "ESNext.AsyncIterable", "DOM"],
		"esModuleInterop": true,
		"allowJs": true,
		"sourceMap": true,
		"strict": true,
		"noEmit": true,
		"experimentalDecorators": true,
		"skipLibCheck": true,
		"baseUrl": ".",
		"paths": {
			"@/*": ["./*"],
			"@server/*": ["./server/*"],
			"@client/*": ["./client/*"]
		},
		"types": ["@nuxt/types", "@nuxtjs/axios", "@types/node"]
	},
	"exclude": ["node_modules", ".nuxt", "dist"]
}
